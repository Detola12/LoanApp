@model LoanApp.Models.UserViewModel



<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>User Registration</title>
</head>
<body>
<div class="container mx-auto w-75">
    <form asp-controller="User" asp-action="register" method="POST">
        <h2 class="fw-bold">User Registration</h2>
        <div class="row">

            <div class="mt-3 col-md-6">
                <label asp-for="FirstName" class="form-label">First Name: </label>
                <input type="text" class="form-control" asp-for="FirstName">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mt-3 col-md-6">
                <label asp-for="LastName" class="form-label">Last Name: </label>
                <input type="text" class="form-control" asp-for="LastName">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label asp-for="Address" class="form-label">Address: </label>
                <input type="text" class="form-control" asp-for="Address">
                <span asp-validation-for="Address" class="text-danger"></span>

            </div>

            <div class="mt-3 ">
                <label asp-for="Email" class="form-label">Email: </label>
                <input type="email" class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
            
            <div class="mt-3 col-md-6">
                <label asp-for="Phone" class="form-label">Phone: </label>
                <input type="text" class="form-control" asp-for="Phone">
                <span asp-validation-for="Phone" class="text-danger"></span>

            </div>
            <div class="mt-3 col-md-6">
                <label asp-for="Age" class="form-label">Age: </label>
                <input type="number" class="form-control" asp-for="Age">
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            
            <div class="mt-3 col-md-6">
                <label asp-for="BVN" class="form-label">BVN: </label>
                <input type="text" class="form-control" asp-for="BVN">
                <span asp-validation-for="BVN" class="text-danger"></span>

            </div>
            <div class="mt-3 col-md-6">
                <label asp-for="Password" class="form-label">Password: </label>
                <input type="password" class="form-control" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
            <div class="mt-5 d-flex justify-content-center mx-auto">
                <button class="btn btn-outline-secondary w-25">Submit</button>
            </div>
            
        </div>
        
    </form>
</div>
</body>
</html>